{ TForm1 }


procedure TForm1.Exerccio11Click(Sender: TObject);
var
  FFormExercicio1: TForm2;
begin
  FFormExercicio1 := TForm2.Create(Self);

  try
    FFormExercicio1.ShowModal;
  finally
    FFormExercicio1.Free;
  end;
end;


